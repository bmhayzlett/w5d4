<h1> <%= @user.username %></h1>
<% if current_user %>
  <form class="" action="<%= session_url %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" value="Log Out">
  </form>

<% else %>
  <form class="" action="<%= new_session_url %>" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" value="Log In">
  </form>
<% end %>

<a href="<%= new_goal_url %>">Create Goal</a>

<h2>Current Goals</h2>
<ul id="incomplete">
  <% @user.incomplete_goals.each do |goal| %>
    <li><%= goal.title %></li>
    <li>Target: <%= goal.target_date %></li>
    <li><%= goal.public ? 'Public' : 'Private'  %></li>
    <a href="<%= edit_goal_url(goal) %>">Edit Goal</a>
    <%= link_to "Remove Goal", goal_url(goal), method: :delete %>
  <% end %>
</ul>

<h2>Completed Goals</h2>
<ul id="complete">
  <% @user.complete_goals.each do |goal| %>
    <li><%= goal.title %></li>
    <li>Target: <%= goal.target_date %></li>
    <li><%= goal.public ? 'Public' : 'Private'  %></li>
    <a href="<%= edit_goal_url(goal) %>">Edit Goal</a>
    <%= link_to "Remove Goal", goal_url(goal), method: :delete %>
  <% end %>
</ul>
